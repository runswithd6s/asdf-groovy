#!/usr/bin/env bash

if [[ ! ("${ASDF_GROOVY_DISABLE_JAVA_HOME_EXPORT:-}" = true) ]]; then
  java_path="$(asdf which java)"
  if [[ -n "${java_path}" ]]; then
    JAVA_HOME="$(dirname "$(dirname "$(realpath "${java_path}")")")"
    export JAVA_HOME
  fi
fi

if [ -n "$ASDF_INSTALL_PATH" ]; then
  export GROOVY_HOME="$ASDF_INSTALL_PATH"
fi
